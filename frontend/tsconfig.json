{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./tsout",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true, // Skips type checking of all declaration (*.d.ts) files
  },
  "include": ["src", "src/types.d.ts", "eslint.config.mjs"],
  "exclude": [
    "node_modules",
  ],
}